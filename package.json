{
  "name": "nextgenui-library",
  "private": false,
  "version": "0.0.1",
  "description": "This is a React component library",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/nextgenui-library.es.js",
    "require": "./dist/nextgenui-library.umd.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hamzahOlaniyan/nextgenui-library.git"
  },
  "author": "Hamzah Olaniyan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamzahOlaniyan/nextgenui-library/issues"
  },
  "homepage": "https://github.com/hamzahOlaniyan/nextgenui-library#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run build:css",
    "build:css": "npx @tailwindcss/cli -m -i ./src/tailwind.css -o ./dist/styles.css",
    "lint": "eslint . --ext ts,tsx --report-unused-disabled-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "concurrently 'npm run storybook:css' 'storybook dev -p 6006'",
    "storybook:css": "npx @tailwindcss/cli -w -i ./src/tailwind.css -o ./src/index.css",
    "build-storybook": "concurrently 'npm run build-storybook:css' 'storybook build'",
    "build-storybook:css": "npx @tailwindcss/cli -m -i ./src/tailwind.css -o ./src/index.css",
    "prepublicOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.6",
    "@storybook/addon-onboarding": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/builder-vite": "^8.6.4",
    "@storybook/experimental-addon-test": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.11.4",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.51.0",
    "storybook": "^8.6.4",
    "tailwind-merge": "^3.0.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.0.8"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/postcss": "^4.0.14",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.14"
  }
}
